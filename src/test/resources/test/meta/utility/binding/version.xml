<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-2.5.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">



	<!-- Scans for application @Components to deploy -->

	<import resource="classpath:/meta/utility/jackson.xml" />
	<import resource="classpath:/atem/pojo/entitytype.xml" />


	<bean class="org.atemsource.atem.utility.path.AttributePathBuilderFactory">
	</bean>


	<bean id="atem-utility-bindingProcessor"
		class="org.atemsource.atem.utility.binding.version.VersionedBinder">
		<property name="typeFilter">
			<bean class="org.atemsource.atem.utility.binding.PackageTypeFilter">
				<property name="includedPackage" value="org.atemsource.atem.utility.domain" />
			</bean>
		</property>
		<property name="subRepository" ref="atem-json-repository" />
		<property name="transformationBuilderFactory">
			<bean
				class="org.atemsource.atem.utility.transform.api.TransformationBuilderFactory">
				<property name="converterFactory">
					<bean
						class="org.atemsource.atem.utility.transform.impl.converter.ConverterFactoryImpl">
						<property name="factories">
							<list>
								<bean
									class="org.atemsource.atem.utility.transform.impl.converter.EnumToStringConverterFactory" />
							</list>
						</property>
					</bean>
				</property>
			</bean>
		</property>
		<property name="filters">
			<list>
				<bean
					class="org.atemsource.atem.utility.binding.jackson.JacksonIgnoreFilter" />
			</list>
		</property>
		<property name="versionResolver">
			<bean
				class="org.atemsource.atem.utility.transform.impl.version.VersionResolver">
				<property name="parts" value="2" />
				<property name="separator" value="\." />
			</bean>
		</property>
		<property name="versions">
			<list>
				<value>1.0</value>
				<value>1.1</value>
			</list>
		</property>
	</bean>

	<bean id="atem-pojo-repository"
		class="org.atemsource.atem.impl.pojo.ScannedPojoEntityTypeRepository">
		<property name="entityTypeClass"
			value="org.atemsource.atem.impl.pojo.PlainPojoEntityType" />
		<property name="entityClass" value="java.lang.Object" />
		<property name="propertyDescriptorFactory" ref="pojoPropertyDescriptorFactory" />
		<property name="includedPackage" value="org.atemsource.atem.utility.domain" />
		<property name="attributeFactories">
			<list>
				<bean
					class="org.atemsource.atem.impl.pojo.attribute.PrimitiveAttributeFactory"></bean>
				<bean
					class="org.atemsource.atem.impl.pojo.attribute.ArrayAttributeFactory"></bean>
				<bean
					class="org.atemsource.atem.impl.pojo.attribute.CollectionAttributeFactory"></bean>
				<bean
					class="org.atemsource.atem.impl.pojo.attribute.MapAssociationAttributeFactory"></bean>
				<bean
					class="org.atemsource.atem.impl.pojo.attribute.SingleAssociationAttributeFactory"></bean>
			</list>
		</property>
	</bean>



	<bean id="atem-repository"
		class="org.atemsource.atem.impl.common.EntityTypeRepositoryImpl"
		init-method="init">
		<property name="repositories">
			<list>
				<ref bean="atem-entityType-repository" />
				<ref bean="atem-attribute-repository" />
				<ref bean="atem-json-repository" />
				<ref bean="atem-pojo-repository" />
				<ref bean="derivation-repository" />
			</list>
		</property>
	</bean>







</beans>
