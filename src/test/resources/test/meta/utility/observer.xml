<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-2.5.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">



	<!-- Scans for application @Components to deploy -->

	<import resource="classpath:/test/meta/pojo/entitytype.xml" />
	<import resource="classpath:/meta/utility/transform.xml" />
	<import resource="classpath:/meta/utility/compare.xml" />
	<import resource="classpath:/meta/utility/snapshot.xml" />
	<import resource="classpath:/meta/utility/observer.xml" />
	<import resource="classpath:/meta/dynamic/entitytype.xml" />

	<bean id="dynamic-entityType-repository"
		class="org.atemsource.atem.impl.dynamic.DynamicEntityTypeRepository">
		<property name="serializingPrimitiveValues" value="true" />
	</bean>


	<bean id="entityTypeRepository"
		class="org.atemsource.atem.impl.common.EntityTypeRepositoryImpl"
		init-method="init">
		<property name="repositories">
			<list>
				<ref bean="entityType-repository" />
				<ref bean="attribute-repository" />
				<ref bean="pojo-entityType-repository" />
				<ref bean="dynamic-entityType-repository" />
			</list>
		</property>
	</bean>

	<bean
		class="org.atemsource.atem.utility.snapshot.SnapshotBuilderFactory">
		<property name="dynamicEntityTypeRepository" ref="dynamic-entityType-repository"></property>
	</bean>
	<bean
		class="org.atemsource.atem.utility.observer.EntityObserverFactory">
	</bean>







</beans>
