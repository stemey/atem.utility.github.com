 	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="configurationClass" value="org.hibernate.cfg.AnnotationConfiguration"/>
		<property name="configLocation" value="classpath:hibernate.cfg.xml"/>
	</bean> 
	
	<bean id="entityService" class="org.atemsource.atem.impl.common.HibernatePersistenceService">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
 
	<bean id="hibernateEntityTypeRepository" class="org.atemsource.atem.impl.hibernate.HibernateMetaDataRepository">
		<property name="validationMetaData">
			<ref bean="hibernateValidationMetaDataRepository"/>
		</property>
	</bean>
 
 	<bean id="entityTypeRepository" class="org.atemsource.atem.impl.common.EntityTypeRepositoryImpl">
	</bean>
 
	<bean id="entityTypeRepositoryFactory" class="org.atemsource.atem.impl.common.EntityTypeRepositoryFactory">
	</bean>
 
 
	
	<bean name="hibernateDao" class="de.sinnerschrader.fue.administration.entityview.service.hibernate.HibernateDao">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>  
 
</beans>
		

